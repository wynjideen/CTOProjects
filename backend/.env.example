# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cto_projects

# Redis
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration
S3_BUCKET=cto-projects-files
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# JWT Configuration
JWT_SECRET=your-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# OIDC Configuration (Auth0 or Cognito)
OIDC_PROVIDER=auth0
OIDC_DOMAIN=your-tenant.auth0.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_AUDIENCE=https://api.example.com
OIDC_JWKS_URI=https://your-tenant.auth0.com/.well-known/jwks.json

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_ABSOLUTE_TIMEOUT_HOURS=24

# LLM Provider Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key
LLM_MODEL=gpt-4
LLM_API_BASE_URL=https://api.openai.com/v1

# AWS SQS Configuration (optional)
SQS_QUEUE_URL=https://sqs.region.amazonaws.com/account/queue-name
SQS_REGION=us-east-1

# Feature Flags
ENABLE_OTEL=false
ENABLE_DETAILED_LOGGING=false
